#define JE_PTRMGR_START_SIZE		256
#define JE_PTRMGR_EXTEND_AMOUNT		512

typedef struct
{
	void			*Ptr;
	int32			RefCount;

} jePtrMgr_SEntry;					// Stack entry

typedef struct jePtrMgr
{
#ifdef _DEBUG
	jePtrMgr		*Signature1;
#endif

	int32			RefCount;

	uint32			StackSize;
	uint32			StackLoc;
	jePtrMgr_SEntry	*PtrStack;

	int32			TotalPtrRefs;

	// Krouer add few new elements
	jeWorld*		pWorld;
	jeResourceMgr*	pResMgr;
	int32			lData;

#ifdef _DEBUG
	jePtrMgr		*Signature2;
#endif
} jePrtMgr;

typedef struct
{
	jePtrMgr_Index	Index;
} jePtrMgr_Header;

#ifdef __cplusplus
}
#endif

#endif


