#ifndef WAVELET_INTERNAL_H
#define WAVELET_INTERNAL_H

#include "BaseType.h"
#include "VFile.h"
#include "ThreadQueue.h"
#include "Tsc.h"

struct jeWavelet
{
	uint32 tag;
	int RefCount;
	int width,height,planes,levels;
	int coderN,transformN,bps;
	int alphaMask;	// 0 for none, 1 for full alpha, (-1) for transparency (binary)

	uint32 compLen,compLenLL,stopLen;
	uint8 * comp;

	jeBoolean transposeLHs,tblock;
	tsc_type DecompressTSC;

	jeVFile * StreamingFile;
	jeThreadQueue_Semaphore * StreamingLock;
	jeThreadQueue_Job *	StreamingJob;
	uint streamDecoded,streamGot;
};

#define Wavelet_AlphaIsTransparency(w) ( (w)->alphaMask < 0 ? JE_TRUE : JE_FALSE )

#define WAVELET_TAG ((uint32)0x65566157)	// 'WaVe'

#endif

